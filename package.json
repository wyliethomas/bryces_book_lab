{
  "name": "bryces-book-lab",
  "version": "1.0.0",
  "description": "Bryce's Book Lab - AI-powered desktop application for writing books",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "react",
    "book-writing",
    "ai-assistant"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@tiptap/extension-link": "^2.1.13",
    "@tiptap/extension-placeholder": "^2.1.13",
    "@tiptap/extension-underline": "^2.1.13",
    "@tiptap/react": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "better-sqlite3": "^11.7.0",
    "clsx": "^2.0.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.294.0",
    "openai": "^4.20.1",
    "puppeteer": "^23.11.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.bryce.booklab",
    "productName": "Bryce's Book Lab",
    "directories": {
      "output": "dist-electron"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "electron/database.db",
        "to": "database.db",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
